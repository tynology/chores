<% if user_signed_in? %>
    <h1>Breaux Family Chores</h1>
      </div>
  <% User.all.each do |user| %>
    <table width="100%">
      <thead>
        <tr><h1><%= user.name %></h1>
        </tr>
      </thead>
      <tbody>
          <tr><h4>Today's Chores</h4></tr>
    <% user.chores.each do |c| %>
      <% if c.completed == false %>
        <% if c.date.to_date == Date.current %>                  
                    <tr>
                        <td><%= c.task %></td>
                        <td><%= c.date %></td>
                        <td><%= link_to "Complete", {:action => "completed_toggle", :id => c.id}, class: "btn btn-default btn-lg" %></td>
