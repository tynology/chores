                    </tr>
        <% end %>
      <% end %>
    <% end %></tbody></table><table width="100%"><tbody>
            <tr><h4>Overdue Chores</h4></tr>
    <% user.chores.each do |p| %>
      <% if p.completed == false %>
        <% if p.date.to_date < Date.current %>
                  <tr>
                    <td><%= p.task %></td>
                    <td><%= p.date %></td>
                    <td><%= link_to "Complete", {:action => "completed_toggle", :id => p.id}, class: "btn btn-primary btn-lg" %></td>
